    <!-- End Navbar -->
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-10">
                    <div class="card">
                        <div class="card-header card-header-primary">
                            <h4 class="card-title">Administratori</h4>
                            <p class="card-category">Dodaj - Uredi</p>
                        </div>
                        <div class="card-body">


                            <form asp-controller="Administrator" asp-action="Snimi" enctype="multipart/form-data">

                                <input type="text" hidden asp-for="ID" value="@Model.ID" class="form-control" />

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="bmd-label-floating">Ime</label>
                                            <input type="text" asp-for="Ime" value="@Model.Ime" class="form-control" />
                                            <span asp-validation-for="Ime" class="text-danger"></span>

                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="bmd-label-floating">Prezime</label>
                                            <input type="text" asp-for="Prezime" value="@Model.Prezime" class="form-control" />
                                            <span asp-validation-for="Prezime" class="text-danger"></span>

                                        </div>
                                    </div>
                                </div>


                                <div class="row">

                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="bmd-label-floating">JMBG</label>
                                            <input type="text" asp-for="JMBG" value="@Model.JMBG" class="form-control" />
                                            <span asp-validation-for="JMBG" class="text-danger"></span>


                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="bmd-label-floating">Datum rodjenja</label>
                                            <input type="text" onfocus="(this.type='date')" onblur="if(!this.value)this.type='text'" asp-for="DatumRodjenja" value="@Model.DatumRodjenja" class="form-control" />
                                            <span asp-validation-for="DatumRodjenja" class="text-danger"></span>

                                        </div>
                                    </div>
                                </div>




                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="bmd-label-floating">Telefon</label>
                                            <input type="text" asp-for="Telefon" value="@Model.Telefon" class="form-control" />
                                            <span asp-validation-for="Telefon" class="text-danger"></span>

                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="bmd-label-floating">Email</label>
                                            <input type="text" asp-for="Email" value="@Model.Email" class="form-control" />
                                            <span asp-validation-for="Email" class="text-danger"></span>

                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="bmd-label-floating">Opcina</label>
                                            <select asp-for="OpcinaID" asp-items="@Model.Opcina" class="form-control">
                                                <option>(Odaberi općinu)</option>
                                            </select>
                                            <span asp-validation-for="OpcinaID" class="text-danger"></span>

                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="bmd-label-floating">Spol</label>
                                            <select asp-for="Spol" class="form-control">
                                                <option value="M">Muški </option>
                                                <option value="Ž">Ženski </option>
                                            </select>
                                            <span asp-validation-for="Spol" class="text-danger"></span>

                                        </div>
                                    </div>

                                </div>


                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="bmd-label-floating">Login</label>
                                            <select asp-for="LoginID" asp-items="@Model.Login" class="form-control">
                                                <option>(Odaberi login)</option>
                                            </select>
                                            <span asp-validation-for="LoginID" class="text-danger"></span>

                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="bmd-label-floating">Slika admina</label>
                                            <input type="file" asp-for="MyImage" class="form-control" />
                                            <span asp-validation-for="MyImage" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <br />

                                <button type="submit" class="btn btn-primary pull-right">Spremi</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <a href="/Administrator/Prikaz" class="btn btn-secondary"> Nazad </a>


        </div>
    </div>


