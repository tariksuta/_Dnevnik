    <div class="content">
        <div class="container-fluid">
            <!--body-->

            <div class="row">
                <!-- Izgled tabele -->
                <div class="col-md-10">
                    <div class="card">
                        <div class="card-header card-header-primary">
                            <h4 class="card-title">Smjerovi</h4>
                            <p class="card-category">Prikaz</p>
                        </div>
                        <div class="card-body table-responsive">
                            <table class="table table-hover">
                                <thead class="text-primary">
                                    <!-- Izgled tabele -->
                                    <tr>
                                        <th>Naziv</th>
                                        <th>Stepen</th>
                                        <th>Zvanje</th>
                                        <th>Oznaka</th>
                                        <th>Akcija</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var s in @Model.ListaSmjerova)
                                    {
                                        <tr>
                                            <td>@s.Naziv</td>
                                            <td>@s.Stepen</td>
                                            <td>@s.Zvanje</td>
                                            <td>@s.Oznaka</td>
                                            <td>
                                                <a class="btn btn-primary" href="/Smjer/DodajUredi?SmjerID=@s.ID">Uredi</a>
                                                <a class="btn btn-danger" href="/Smjer/Obrisi?SmjerID=@s.ID">Obriši</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table><!-- Izgled tabele -->
                        </div>
                    </div>
                </div>
            </div><!-- Izgled tabele -->

            <a class="btn btn-success" href="/Smjer/DodajUredi">Dodaj</a>

            @if (poruka != null)
            {
                <br />
                <br />
                <div class="col-md-6">

                    <div class="alert alert-light">@poruka</div>
                </div>
            }
            <!--body-->
