                    <div class="card">
                        <div class="card-header card-header-primary">
                            <h4 class="card-title">OdjeljenjeUcenik</h4>
                            <p class="card-category">Dodaj - Uredi</p>
                        </div>
                        <div class="card-body">

                            <form action="/OdjeljenjeUcenik/Snimi">

                                <input type="text" hidden name="OdjeljenjeUcenikID" value="@Model.OdjeljenjeUcenikID" /><br />

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="bmd-label-floating">Broj u dnevniku</label>
                                            <input type="number" name="BrojUDnevniku" value="@Model.BrojUDnevniku" class="form-control" />
                                            <span asp-validation-for="BrojUDnevniku" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="bmd-label-floating">Odjeljenje</label>
                                            <select asp-for="OdjeljenjeID" asp-items="@Model.Odjeljenje" class="form-control">
                                                <option>(Odaberi odjeljenje)</option>
                                            </select>
                                            <span asp-validation-for="OdjeljenjeID" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="bmd-label-floating">Ucenik</label>
                                            <select asp-for="UcenikID" asp-items="@Model.Ucenik" class="form-control">
                                                <option>(Odaberi ucenika)</option>
                                            </select>
                                            <span asp-validation-for="UcenikID" class="text-danger"></span>

                                        </div>
                                    </div>
                                </div>

                                <button type="submit" class="btn btn-primary pull-right">Spremi</button>
                                <div class="clearfix"></div>
                            </form>
                        </div>
                    </div>
                </div>
