    <div class="content">
        <div class="container-fluid">
            <!--body-->

            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header card-header-primary">
                            <h4 class="card-title">Sekcije</h4>
                            <p class="card-category">Učenici u sekciji</p>
                        </div>
                        <div class="card-body table-responsive">
                            <table class="table table-hover">
                                <thead class="text-primary">
                                <tbody>
                                    @foreach (var x in Model.ucenici)
                                    {
                                        <tr>
                                            <td>@x.Ime</td>
                                            <td>@x.Prezime</td>
                                            <td>@x.DatumUclanjenja</td>
                                            <td>@x.Razred</td>
                                            <td>
                                                <button ajax-url="/Sekcija/ObrisiUcenikSekcija?UcenikSekcijaID=@x.UcenikSekcijaID" ajax-rezultat="posebantest" ajax-poziv="da" class="btn btn-primary">Obrisi</button>
                                                <button ajax-url="/Sekcija/DodajUredi?SekcijaID=@Model.SekcijaID&UcenikSekcijaID=@x.UcenikSekcijaID" ajax-rezultat="posebantest" class="btn btn-secondary" ajax-poziv="da">Uredi</button>

                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
    <button ajax-url="/Sekcija/DodajUredi?SekcijaID=@Model.SekcijaID" ajax-rezultat="posebantest" class="btn btn-secondary" ajax-poziv="da">Dodaj</button> @* 1. KORAK   implementirati funkciju dodaj u sekicju ucenika*@
                        </div>
                    </div>
                </div>
            </div>
