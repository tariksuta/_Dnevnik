    <script>
        $(document).ready(function (p) {
            $("button[ajax-poziv='da']").click(function (event) {
                var btn = $(this);
                var url = btn.attr("ajax-url");
                var r = btn.attr("ajax-rezultat");
                $.get(url, function (rezultat, status) {
                    $("#" + r).html(rezultat);
                });
            });
        });
    </script>
